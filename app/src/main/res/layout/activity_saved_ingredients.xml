<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedIngredientsActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/savedIngredientsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>


        <TextView
            android:id="@+id/totalCaloriesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Calories: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/totalFatTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Fat: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/totalCholesterolTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Cholesterol: "
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/totalSugarTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Sugar: "
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/clearAllButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>